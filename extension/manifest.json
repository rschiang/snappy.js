{
  "manifest_version": 2,

  "name": "Snappy.js",
  "description": "Snap webpages using HTML2Canvas technique.",
  "author": "Poren Chiang",
  "icons": { "128": "icons/128.png" },
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },

  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}
